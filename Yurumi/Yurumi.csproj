<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Yurumi</PackageId>
    <Title>Yurumi</Title>
    <Version>1.0.4</Version>
    <Authors>frohikey</Authors>
    <PackageLicenseUrl>https://github.com/goto10hq/Yurumi/blob/master/LICENSE</PackageLicenseUrl>
    <Owners>Goto10</Owners>
    <PackageProjectUrl>https://github.com/goto10hq/Yurumi</PackageProjectUrl>
    <Summary>Extremely easy and cute library for sending HTML e-mails.</Summary>
    <Description>Extremely easy and cute library for sending HTML e-mails.</Description>
    <PackageTags>smtp email sendgrid mailgun html-templates</PackageTags>
    <Copyright>Copyright (c) 2017-2018 Goto10 s.r.o.</Copyright>
    <Company>Goto10</Company>
    <RepositoryUrl>https://github.com/goto10hq/Yurumi</RepositoryUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/goto10hq/Yurumi/master/yurumi-logo.png</PackageIconUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.7.2" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="2.0.1" />
    <PackageReference Include="Sushi2" Version="1.2.3" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.4.0" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Tokens\" />
    <Folder Include="Encoders\" />
    <Folder Include="Configurations\" />
    <Folder Include="Connections\" />
  </ItemGroup>
</Project>